---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Arvind Chandrashekar">

  <!-- Custom Styles & Animations -->
  <style>
    @keyframes fade-in-up {
      from {
        opacity: 0;
        transform: translateY(20px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    @keyframes fade-in {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    @keyframes slide-in-right {
      from {
        opacity: 0;
        transform: translateX(-20px);
      }
      to {
        opacity: 1;
        transform: translateX(0);
      }
    }

    @keyframes gradient-shift {
      0%, 100% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
    }

    @keyframes pulse-glow {
      0%, 100% { opacity: 0.4; }
      50% { opacity: 0.8; }
    }

    @keyframes float {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-10px); }
    }

    .animate-fade-in-up {
      animation: fade-in-up 0.8s ease-out forwards;
    }

    .animate-fade-in {
      animation: fade-in 1s ease-out forwards;
    }

    .animate-slide-in {
      animation: slide-in-right 0.6s ease-out forwards;
    }

    .delay-100 { animation-delay: 0.1s; }
    .delay-200 { animation-delay: 0.2s; }
    .delay-300 { animation-delay: 0.3s; }
    .delay-400 { animation-delay: 0.4s; }
    .delay-500 { animation-delay: 0.5s; }

    .gradient-text {
      background: linear-gradient(135deg, #fff 0%, #a78bfa 50%, #60a5fa 100%);
      background-size: 200% 200%;
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
      animation: gradient-shift 8s ease infinite;
    }

    .card-hover {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .card-hover:hover {
      transform: translateY(-4px);
      box-shadow: 0 20px 40px -15px rgba(139, 92, 246, 0.15);
    }

    .glow-orb {
      position: absolute;
      border-radius: 50%;
      filter: blur(80px);
      animation: pulse-glow 4s ease-in-out infinite;
    }

    .link-underline {
      position: relative;
    }

    .link-underline::after {
      content: '';
      position: absolute;
      bottom: -2px;
      left: 0;
      width: 0;
      height: 2px;
      background: linear-gradient(90deg, #a78bfa, #60a5fa);
      transition: width 0.3s ease;
    }

    .link-underline:hover::after {
      width: 100%;
    }

    .stagger-item {
      opacity: 0;
    }

    .stagger-item.visible {
      animation: fade-in-up 0.6s ease-out forwards;
    }
  </style>

  <!-- Welcome -->
  <section class="min-h-[85vh] flex flex-col justify-center px-6 py-20 relative overflow-hidden">

    <!-- Background orbs -->
    <div class="glow-orb w-96 h-96 bg-violet-500/20 -top-48 -right-48" style="animation-delay: 0s;"></div>
    <div class="glow-orb w-72 h-72 bg-blue-500/20 bottom-0 -left-36" style="animation-delay: 2s;"></div>

    <div class="max-w-3xl mx-auto relative z-10">

      <!-- Photo + Name -->
      <div class="flex items-center gap-6 mb-12 animate-fade-in-up opacity-0" style="animation-delay: 0.1s;">
        <div class="w-20 h-20 rounded-full overflow-hidden ring-2 ring-violet-500/30 hover:ring-violet-500/60 transition-all duration-500 hover:scale-105">
          <img src="/arvind.png" alt="Arvind" class="w-full h-full object-cover" />
        </div>
        <div>
          <h1 class="text-2xl md:text-3xl font-medium text-zinc-100">Arvind Chandrashekar</h1>
        </div>
      </div>

      <!-- Welcome text -->
      <div class="space-y-6">
        <p class="text-xl md:text-2xl text-zinc-300 leading-relaxed font-light animate-fade-in-up opacity-0" style="animation-delay: 0.2s;">
          Hello. Welcome to my corner of the internet.
        </p>
        <p class="text-xl md:text-2xl leading-relaxed font-light animate-fade-in-up opacity-0" style="animation-delay: 0.3s;">
          <span class="text-zinc-300">I'm a </span>
          <span class="gradient-text font-normal">behavioral scientist</span>
          <span class="text-zinc-300"> who thinks about why people do what they do — and whether we can design better around it.</span>
        </p>
        <p class="text-lg text-zinc-500 leading-relaxed animate-fade-in-up opacity-0" style="animation-delay: 0.4s;">
          By day, I lead a research team. By night, I write, tinker, and occasionally try to build things I probably shouldn't.
        </p>
      </div>

      <!-- Scroll indicator -->
      <div class="mt-20 animate-fade-in opacity-0" style="animation-delay: 1s;">
        <div class="flex items-center gap-2 text-zinc-600 text-sm">
          <span>Scroll to explore</span>
          <svg class="w-4 h-4 animate-bounce" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </div>
      </div>

    </div>
  </section>

  <!-- What's Here - Cards -->
  <section class="px-6 py-24 relative" style="background-image: url('/bg-cards.jpg'); background-size: cover; background-position: center;">

    <!-- Background overlay -->
    <div class="absolute inset-0 bg-zinc-950/80 pointer-events-none"></div>

    <div class="max-w-4xl mx-auto relative z-10">

      <h2 class="text-sm tracking-widest uppercase text-zinc-600 mb-12 stagger-item">What you'll find here</h2>

      <div class="grid md:grid-cols-2 gap-6">

        <a href="/projects" class="card-hover block group rounded-2xl border border-zinc-800 hover:border-violet-500/50 bg-zinc-900/50 backdrop-blur stagger-item overflow-hidden">
          <div class="h-32 overflow-hidden">
            <img src="/img-projects.jpg" alt="Projects" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
          </div>
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-xl text-zinc-100 group-hover:text-white transition">Projects</h3>
              <span class="text-zinc-600 group-hover:text-violet-400 group-hover:translate-x-1 transition-all duration-300">→</span>
            </div>
            <p class="text-zinc-500 text-sm leading-relaxed">
              Open source experiments. Un-Dios, cricket analytics, AI explorations.
            </p>
          </div>
        </a>

        <a href="https://zennmaster.substack.com/" target="_blank" rel="noopener" class="card-hover block group rounded-2xl border border-zinc-800 hover:border-orange-500/50 bg-zinc-900/50 backdrop-blur stagger-item overflow-hidden">
          <div class="h-32 overflow-hidden">
            <img src="/img-writing.jpg" alt="Writing" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
          </div>
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-xl text-zinc-100 group-hover:text-white transition">Writing</h3>
              <span class="text-zinc-600 group-hover:text-orange-400 group-hover:translate-x-1 transition-all duration-300">→</span>
            </div>
            <p class="text-zinc-500 text-sm leading-relaxed">
              Essays on markets, behavior, technology. The occasional confession.
            </p>
          </div>
        </a>

        <a href="/professional" class="card-hover block group rounded-2xl border border-zinc-800 hover:border-emerald-500/50 bg-zinc-900/50 backdrop-blur stagger-item overflow-hidden">
          <div class="h-32 overflow-hidden">
            <img src="/img-professional.jpg" alt="Professional" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
          </div>
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-xl text-zinc-100 group-hover:text-white transition">Professional</h3>
              <span class="text-zinc-600 group-hover:text-emerald-400 group-hover:translate-x-1 transition-all duration-300">→</span>
            </div>
            <p class="text-zinc-500 text-sm leading-relaxed">
              The resume version. Research leadership, patents, credentials.
            </p>
          </div>
        </a>

        <a href="/personal" class="card-hover block group rounded-2xl border border-zinc-800 hover:border-pink-500/50 bg-zinc-900/50 backdrop-blur stagger-item overflow-hidden">
          <div class="h-32 overflow-hidden">
            <img src="/img-personal.jpg" alt="Personal" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
          </div>
          <div class="p-6">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-xl text-zinc-100 group-hover:text-white transition">Personal</h3>
              <span class="text-zinc-600 group-hover:text-pink-400 group-hover:translate-x-1 transition-all duration-300">→</span>
            </div>
            <p class="text-zinc-500 text-sm leading-relaxed">
              What doesn't fit on a resume. The uncomfortable parts.
            </p>
          </div>
        </a>

      </div>

      <!-- Book - Special treatment -->
      <a href="https://www.amazon.com/s?k=An.Al+the+Origins+Athul+DeMarco" target="_blank" rel="noopener"
         class="card-hover mt-6 block group rounded-2xl border border-zinc-800 hover:border-cyan-500/50 bg-zinc-900/50 backdrop-blur stagger-item overflow-hidden">
        <div class="flex items-center">
          <div class="w-24 h-24 shrink-0 overflow-hidden">
            <img src="/img-book.jpg" alt="Book" class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" />
          </div>
          <div class="flex-1 p-6 flex items-center gap-4">
            <div class="flex-1">
              <h3 class="text-xl text-zinc-100 mb-1 group-hover:text-white transition">An.Al the Origins</h3>
              <p class="text-zinc-500 text-sm">A book written under a pen name. A different kind of exploration.</p>
            </div>
            <span class="text-zinc-600 group-hover:text-cyan-400 group-hover:translate-x-1 transition-all duration-300">→</span>
          </div>
        </div>
      </a>

    </div>
  </section>

  <!-- Currently -->
  <section class="px-6 py-24 relative overflow-hidden">

    <!-- Animated background -->
    <div class="absolute inset-0 bg-gradient-to-br from-violet-950/20 via-transparent to-blue-950/20 pointer-events-none"></div>

    <div class="max-w-3xl mx-auto relative z-10">

      <h2 class="text-sm tracking-widest uppercase text-zinc-600 mb-10 stagger-item">Currently</h2>

      <div class="space-y-6">
        <div class="flex items-start gap-4 stagger-item group">
          <div class="w-2 h-2 rounded-full bg-violet-500 mt-2.5 group-hover:scale-150 transition-transform"></div>
          <p class="text-lg text-zinc-300 group-hover:text-white transition">Building <span class="text-violet-400">Un-Dios</span>, an open Android platform — without knowing how to code</p>
        </div>
        <div class="flex items-start gap-4 stagger-item group">
          <div class="w-2 h-2 rounded-full bg-blue-500 mt-2.5 group-hover:scale-150 transition-transform"></div>
          <p class="text-lg text-zinc-300 group-hover:text-white transition">Doctoral research on <span class="text-blue-400">social comparison</span> and network mobility</p>
        </div>
        <div class="flex items-start gap-4 stagger-item group">
          <div class="w-2 h-2 rounded-full bg-emerald-500 mt-2.5 group-hover:scale-150 transition-transform"></div>
          <p class="text-lg text-zinc-300 group-hover:text-white transition">Leading user research at <span class="text-emerald-400">Glance</span> across lockscreens, TVs, and ambient displays</p>
        </div>
        <div class="flex items-start gap-4 stagger-item group">
          <div class="w-2 h-2 rounded-full bg-amber-500 mt-2.5 group-hover:scale-150 transition-transform"></div>
          <p class="text-lg text-zinc-300 group-hover:text-white transition">Trying to write more, network less, and <span class="text-amber-400">figure out my own category</span></p>
        </div>
      </div>

    </div>
  </section>

  <!-- Connect -->
  <section class="px-6 py-24 border-t border-zinc-800/50">
    <div class="max-w-3xl mx-auto text-center">

      <h2 class="text-2xl md:text-3xl font-light text-zinc-100 mb-4 stagger-item">
        Say hello
      </h2>
      <p class="text-zinc-500 mb-10 max-w-md mx-auto stagger-item">
        I'm better in writing than in person, but always happy to hear from interesting people.
      </p>

      <div class="flex flex-wrap justify-center gap-4 stagger-item">
        <a href="https://zennmaster.substack.com/"
           target="_blank"
           rel="noopener"
           class="group flex items-center gap-2 px-6 py-3 rounded-xl bg-gradient-to-r from-orange-500/10 to-amber-500/10 border border-orange-500/20 hover:border-orange-500/50 text-orange-300 hover:text-orange-200 transition-all duration-300 hover:scale-105">
          <svg class="w-4 h-4" viewBox="0 0 24 24" fill="currentColor"><path d="M22.539 8.242H1.46V5.406h21.08v2.836zM1.46 10.812V24L12 18.11 22.54 24V10.812H1.46zM22.54 0H1.46v2.836h21.08V0z"/></svg>
          Substack
        </a>
        <a href="https://github.com/zennmaaster"
           target="_blank"
           rel="noopener"
           class="group flex items-center gap-2 px-6 py-3 rounded-xl bg-gradient-to-r from-zinc-500/10 to-zinc-400/10 border border-zinc-500/20 hover:border-zinc-400/50 text-zinc-300 hover:text-white transition-all duration-300 hover:scale-105">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/></svg>
          GitHub
        </a>
        <a href="https://linkedin.com/in/arvindchandrashekar"
           target="_blank"
           rel="noopener"
           class="group flex items-center gap-2 px-6 py-3 rounded-xl bg-gradient-to-r from-blue-500/10 to-blue-400/10 border border-blue-500/20 hover:border-blue-500/50 text-blue-300 hover:text-blue-200 transition-all duration-300 hover:scale-105">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          LinkedIn
        </a>
      </div>

    </div>
  </section>

  <!-- Scroll animation script -->
  <script>
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry, index) => {
        if (entry.isIntersecting) {
          setTimeout(() => {
            entry.target.classList.add('visible');
          }, index * 100);
        }
      });
    }, { threshold: 0.1 });

    document.querySelectorAll('.stagger-item').forEach((el) => {
      observer.observe(el);
    });
  </script>

</Layout>

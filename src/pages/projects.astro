---
import Layout from '../layouts/Layout.astro';

// Fetch repos at build time
const response = await fetch('https://api.github.com/users/zennmaaster/repos?sort=updated&per_page=20');
const repos = await response.json();

// Filter and enhance repos
const projects = repos.map((repo: any) => ({
  name: repo.name,
  description: repo.description || 'An exploration in progress',
  url: repo.html_url,
  stars: repo.stargazers_count,
  forks: repo.forks_count,
  language: repo.language || null,
  updated: new Date(repo.updated_at).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'short',
    day: 'numeric'
  }),
  topics: repo.topics || []
}));

// Language colors
const languageColors: Record<string, string> = {
  'Kotlin': '#A97BFF',
  'Python': '#3572A5',
  'TypeScript': '#3178C6',
  'JavaScript': '#F7DF1E',
  'Java': '#B07219',
  'Astro': '#FF5D01',
};
---

<Layout title="Projects - Arvind Chandrashekar" description="Open source projects, experiments, and explorations">

  <!-- Header -->
  <section class="px-6 pt-20 pb-16">
    <div class="max-w-5xl mx-auto">
      <p class="text-zinc-500 text-sm tracking-widest uppercase mb-6">
        Open Source
      </p>
      <h1 class="text-4xl md:text-5xl font-light text-zinc-100 mb-6">
        Projects & Explorations
      </h1>
      <p class="text-xl text-zinc-400 max-w-2xl leading-relaxed">
        Things I'm building, experimenting with, or learning from. All open source.
        All works in progress in one way or another.
      </p>
    </div>
  </section>

  <!-- GitHub Profile Link -->
  <section class="px-6 pb-12">
    <div class="max-w-5xl mx-auto">
      <a href="https://github.com/zennmaaster"
         target="_blank"
         rel="noopener"
         class="inline-flex items-center gap-3 text-zinc-400 hover:text-zinc-200 transition group">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span class="text-sm">@zennmaaster</span>
        <span class="text-zinc-600 group-hover:translate-x-1 transition-transform">â†’</span>
      </a>
    </div>
  </section>

  <!-- Projects Grid -->
  <section class="px-6 pb-32">
    <div class="max-w-5xl mx-auto">
      <div class="grid gap-6">
        {projects.map((project: any) => (
          <article class="group border border-zinc-800 hover:border-zinc-700 rounded-2xl p-8 transition-all hover:bg-zinc-900/30">
            <div class="flex flex-col md:flex-row md:items-start justify-between gap-6">

              <!-- Project Info -->
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-3 mb-3">
                  <h2 class="text-xl font-medium text-zinc-100 group-hover:text-white transition">
                    {project.name}
                  </h2>
                  {project.language && (
                    <span class="flex items-center gap-1.5 text-xs text-zinc-500">
                      <span
                        class="w-2.5 h-2.5 rounded-full"
                        style={`background-color: ${languageColors[project.language] || '#6B7280'}`}
                      ></span>
                      {project.language}
                    </span>
                  )}
                </div>

                <p class="text-zinc-400 leading-relaxed mb-4 max-w-xl">
                  {project.description}
                </p>

                <p class="text-zinc-600 text-sm">
                  Updated {project.updated}
                </p>
              </div>

              <!-- Actions -->
              <div class="flex items-center gap-2 shrink-0">
                <a href={project.url}
                   target="_blank"
                   rel="noopener"
                   class="flex items-center gap-2 text-zinc-400 hover:text-zinc-100 border border-zinc-700 hover:border-zinc-500 px-4 py-2 rounded-lg transition text-sm">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
                  </svg>
                  Code
                </a>

                <a href={`${project.url}/stargazers`}
                   target="_blank"
                   rel="noopener"
                   class="flex items-center gap-2 text-zinc-400 hover:text-amber-400 border border-zinc-700 hover:border-amber-500/50 px-4 py-2 rounded-lg transition text-sm">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/>
                  </svg>
                  Star
                </a>

                <a href={`${project.url}/fork`}
                   target="_blank"
                   rel="noopener"
                   class="flex items-center gap-2 text-zinc-400 hover:text-emerald-400 border border-zinc-700 hover:border-emerald-500/50 px-4 py-2 rounded-lg transition text-sm">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
                  </svg>
                  Fork
                </a>
              </div>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Bottom CTA -->
  <section class="px-6 py-16 border-t border-zinc-900">
    <div class="max-w-5xl mx-auto text-center">
      <p class="text-zinc-500 mb-6">
        Want to collaborate or have questions about any of these?
      </p>
      <div class="flex justify-center gap-4">
        <a href="https://github.com/zennmaaster"
           target="_blank"
           rel="noopener"
           class="text-zinc-300 border border-zinc-700 hover:border-zinc-500 px-6 py-3 rounded-lg transition text-sm">
          Follow on GitHub
        </a>
        <a href="/personal"
           class="text-zinc-300 border border-zinc-700 hover:border-zinc-500 px-6 py-3 rounded-lg transition text-sm">
          Get in touch
        </a>
      </div>
    </div>
  </section>

</Layout>
